<Page xmlns="http://schemas.nativescript.org/tns.xsd" navigatingTo="onNavigatingTo">
    <ActionBar title="My App" icon="" />
    <StackLayout class="p-4">

        <Label text="Welcome to my FirtApp!" class="text-3xl text-center" />

        <Button text="Hello World!" tap="{{ onTap }}" class="-primary" />

        <SearchBar
            id="searchBar"
            hint="Type Here"
            clear="onClear"
            submit="onSubmit"
        />

        <DatePicker
            year="1980"
            month="4"
            day="20"
            loaded="onDatePickerLoaded"
            />

        <image
        src="https://art.nativescript.org/logo/export/NativeScript_Logo_Blue_White.png"
        stretch="aspectFill"
        />
        
    </StackLayout>
</Page>
